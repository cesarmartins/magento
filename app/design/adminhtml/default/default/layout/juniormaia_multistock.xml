<?xml version="1.0" encoding="UTF-8"?>
<layout>
    <adminhtml_catalog_product_edit>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/stockgrid.js</name></action>
        </reference>
        <reference name="product_tabs">
            <action method="addTab"><name>stocks</name><block>juniormaia_multistock/adminhtml_multistock_tab</block></action>
        </reference>
    </adminhtml_catalog_product_edit>

    <adminhtml_multistock_index>
        <update handle="adminhtml_multistock_ajax" />
        <reference name="root">
            <block type="juniormaia_multistock/adminhtml_multistock_grid_container" name="multistock.grid_container" />
        </reference>
    </adminhtml_multistock_index>

    <adminhtml_multistock_grid>
        <update handle="adminhtml_multistock_ajax" />
        <reference name="root">
            <block type="juniormaia_multistock/adminhtml_multistock_grid" name="multistock.grid" />
        </reference>
    </adminhtml_multistock_grid>

    <adminhtml_multistock_ajax>
        <remove name="right"/>
        <remove name="left"/>
        <block type="core/text_list" name="root" output="toHtml" />
    </adminhtml_multistock_ajax>

    <adminhtml_stock_index>
        <reference name="content">
            <block type="juniormaia_multistock/adminhtml_stock" name="stock.grid_container"/>
        </reference>
    </adminhtml_stock_index>

    <adminhtml_stock_edit>
        <reference name="content">
            <block type="juniormaia_multistock/adminhtml_stock_edit" name="stock.edit"/>
        </reference>
        <reference name="left">
            <block type="juniormaia_multistock/adminhtml_stock_edit_tabs" name="stock.tabs">
                <action method="addTab">
                    <name>form_section_stock</name>
                    <block>juniormaia_multistock/adminhtml_stock_edit_tab_general</block>
                </action>
            </block>
        </reference>
    </adminhtml_stock_edit>
    <adminhtml_stock_new>
        <reference name="content">
            <block type="juniormaia_multistock/adminhtml_stock_edit" name="stock.edit"/>
        </reference>
        <reference name="left">
            <block type="juniormaia_multistock/adminhtml_stock_edit_tabs" name="stock.tabs">
                <action method="addTab">
                    <name>form_section_stock</name>
                    <block>juniormaia_multistock/adminhtml_stock_edit_tab_general</block>
                </action>
            </block>
        </reference>
    </adminhtml_stock_new>

</layout>
