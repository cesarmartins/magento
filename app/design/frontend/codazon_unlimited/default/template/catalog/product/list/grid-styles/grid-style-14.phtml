<script>

    function saveQtd(id, url){
        console.log(id, url);
        var elementId = "#qty_" + id;
        var ProdutcQtd = jQuery(elementId).val();
        var baseUrl = "<?php echo Mage::getUrl(); ?>";

        jQuery.ajax({
            method: "POST",
            dataType: "json",
            url: baseUrl + "listafavoritos/ajax/salvarQtdProdutos",
            data: { produtcQtd: ProdutcQtd, product_id: id }
        })
            .done(function( msg ) {
                console.log(msg);
                window.location = url;
            });
    }

    function abrirOpcoes(id){
        console.log("chegou aui" + id);
        var element = "#mostrar-opcoes-" + id;
        jQuery(element).show();

    }

    function fecharJanela(id){

        console.log("chegou aui" + id);
        var element = "#mostrar-opcoes-" + id;
        jQuery(element).hide();

    }

    function addProductFavoritos(id, userId, that){

        var element = "#mostrar-opcoes-" + id;
        var adicionar = "#btn-adicionar-fav-" + id;
        var remover = "#btn-remover-fav-" + id;
        var divMsg = "#msg-" + id;
        var listaSelecionada = "#select-lista-favorito-" + id;
        listaSelecionada = jQuery(listaSelecionada).val();
        var baseUrl = "<?php echo Mage::getUrl(); ?>";

        console.log(id, userId);

        jQuery.ajax({
            method: "POST",
            dataType: "json",
            url: baseUrl + "listafavoritos/ajax/cadastrarProdutosFavoritos",
            data: { produtcId: id, userId: userId, listaSelecionada: listaSelecionada }
        })
            .done(function( msg ) {
                console.log(msg);
                if(msg.ativo == 1){
                    jQuery(that).addClass("adicionado-fav");
                    console.log("add");

                    jQuery(element).hide();
                    jQuery(divMsg).show();
                    jQuery(adicionar).show();
                    jQuery(remover).hide();
                }else{
                    jQuery(divMsg).hide();
                    jQuery(adicionar).hide();
                    jQuery(remover).show();

                }
            });
    }

</script>


