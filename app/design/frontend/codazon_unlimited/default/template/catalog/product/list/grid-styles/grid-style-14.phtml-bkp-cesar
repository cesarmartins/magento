                    ?>
                    <div class="wishlist">
                        <button id="btn-adicionar-fav-<?php echo $_product->getId(); ?>" class="adicionado-fav" onclick="addProductFavoritos(<?php echo $_product->getId(); ?>, <?php echo $customerSession->getId(); ?>, this)" <?php echo ($is_favorite)? "" : "style='display: none'" ;?>>remover favoritos</button>
                        <button id="btn-remover-fav-<?php echo $_product->getId(); ?>" class="remove-fav" onclick="abrirOpcoes(<?php echo $_product->getId(); ?>)" <?php echo ($is_favorite)? "style='display: none'" : "" ;?>>add favoritos</button>

                        <div id="msg-<?php echo $_product->getId(); ?>" style="display: none">Produto adicionado as seus favoritos!</div>
                        <div id="mostrar-opcoes-<?php echo $_product->getId(); ?>" style="display: none">
                            <div>
