                        <img class="product-image-photo main-img" src="<?= $imageHelper->init($_product, 'small_image')->keepFrame(false)->resize($width); ?>" alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" />
