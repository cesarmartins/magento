$qtdProduto = Mage::getSingleton('core/session')->getQtdProdutos();
?>
<?php $_product = $this->getProduct(); ?>
<?php $buttonTitle = Mage::helper('core')->quoteEscape($this->__('Add to Cart')); ?>
<?php if($_product->isSaleable()):

    $texto = "";
    if(!empty($_product->getData("multiplo"))){

        $texto = "1 embalagem de " . $_product->getData("multiplo") . " m² (total de " . $_product->getData("multiplo") . " m²)";
        if(!empty($qtdProduto)){
            $qtdProdutoMagento = $qtdProduto;
            $qtdProduto = $qtdProduto * $_product->getData("multiplo");
        }else{
            $qtdProdutoMagento = $this->getProductDefaultQty();
            $qtdProduto = $this->getProductDefaultQty() * $_product->getData("multiplo");
        } ?>

        <div class="add-to-cart">
            <?php if(!$_product->isGrouped()): ?>
                <div class="field qty qty-wrapper">
                    <label for="qty"><?php echo $this->__('Qty:') ?></label>
                    <div class="control">
                        <div class="cart-qty">
                            <div class="qty-ctl">
                                <button title="<?= $this->__('Decrease') ?>" type="button" data-role="change_cart_qty_multiplo" class="decrease" data-multiplo="<?php echo !empty($_product->getData("multiplo"))? $_product->getData("multiplo"):'0'; ?>" data-qty="-1" class="decrease"></button>
                            </div>
                            <input type="hidden" pattern="\d*(\.\d+)?" name="qty" id="qty" maxlength="12" value="<?php echo $qtdProdutoMagento; ?>" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Qty')) ?>" class="input-text qty" />
                            <input type="text" pattern="\d*(\.\d+)?" name="qty_mostrada" id="qty_mostrada" data-original="<?php echo $_product->getData("multiplo"); ?>" maxlength="12" value="<?php echo empty($qtdProduto)? $this->getProductDefaultQty() * 1 : $qtdProduto; ?>" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Qty')) ?>" class="input-text qty" />
                            <div class="qty-ctl">
                                <button title="<?= $this->__('Increase') ?>" type="button" data-role="change_cart_qty_multiplo" data-multiplo="<?php echo !empty($_product->getData("multiplo"))? $_product->getData("multiplo"):'0'; ?>" data-qty="1" class="increase"></button>
                            </div>
                        </div>
                    </div>
                    <span class="span-multiplo" style="display: block;margin-bottom: 10px;margin-top: 5px;"><?php echo $texto; ?></span>
                </div>
            <?php endif; ?>
            <div class="add-to-cart-buttons">
                <button type="button" title="<?php echo $buttonTitle ?>" class="button btn-cart" onclick="productAddToCartForm.submit(this)"><span><span><?php echo $buttonTitle ?></span></span></button>
                <?php echo $this->getChildHtml('', true, true) ?>
            </div>
        </div>

    <?php }else{ ?>
        <div class="add-to-cart">
            <?php if(!$_product->isGrouped()): ?>
                <div class="field qty qty-wrapper">
                    <label for="qty"><?php echo $this->__('Qty:') ?></label>
                    <div class="control">
                        <div class="cart-qty">
                            <div class="qty-ctl">
                                <button title="<?= $this->__('Decrease') ?>" type="button" data-role="change_cart_qty" class="decrease" data-qty="-1" class="decrease"></button>
                            </div>
                            <input type="text" pattern="\d*(\.\d+)?" name="qty" id="qty" maxlength="12" value="<?php echo empty($qtdProduto)? $this->getProductDefaultQty() * 1 : $qtdProduto; ?>" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Qty')) ?>" class="input-text qty" />
                            <div class="qty-ctl">
                                <button title="<?= $this->__('Increase') ?>" type="button" data-role="change_cart_qty" data-qty="1" class="increase"></button>
                            </div>
                        </div>
                    </div>
                </div>
            <?php endif; ?>
            <div class="add-to-cart-buttons">
                <button type="button" title="<?php echo $buttonTitle ?>" class="button btn-cart" onclick="productAddToCartForm.submit(this)"><span><span><?php echo $buttonTitle ?></span></span></button>
                <?php echo $this->getChildHtml('', true, true) ?>
            </div>
        </div>
    <?php } ?>
<?php endif; ?>

