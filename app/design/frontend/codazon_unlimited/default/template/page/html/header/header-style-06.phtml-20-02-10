<script>
    var tam_tela = jQuery(window).width();
    console.log(tam_tela);
    var link_carrinho = "http://camelli1.nextmp.net/oscheckout/";
    var nome_url = jQuery(location).attr("href");

    jQuery(window).load(function() {

        if (link_carrinho == nome_url) {
            console.log("P1");
            jQuery(".col-sm-7.col-md-10.header-top-left").css("width", "25%");
            jQuery(".col-sm-17.col-md-14.header-panel-right").css("width", "75%");
            jQuery(".breadcrumbs").hide();
            jQuery(".footer.content > .footer-content-top > .row > .col-sm-6").css("width", "25%");
            if (tam_tela < 600) {
                console.log("Pegou");
                jQuery("#barra-menu-carrinho").show();
            }

        } else {
            console.log("N OK");

        }
    });

</script>

