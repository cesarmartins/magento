<?xml version="1.0"?>
<config>
    <modules>
        <TotalMetrica_Importacao>
            <version>0.1.0</version>
        </TotalMetrica_Importacao>
    </modules>
    <admin>
        <routers>
			<importacao>
				<use>admin</use>
				<args>
					<module>TotalMetrica_Importacao</module>
					<frontName>importacao</frontName>
				</args>
			</importacao>
        </routers>
    </admin>
    <adminhtml>
		<layout>
			<updates>
				<importacao>
					<file>importacao.xml</file>
				</importacao>
			</updates>
		</layout>
		<menu>
			<importacao module="importacao">
				<title>Importação</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="importacao">
						<title>Enviar Arquivo</title>
						<sort_order>0</sort_order>
						<action>importacao</action>
					</items>
				</children>
			</importacao>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<TotalMetrica_Importacao>
							<title>Importação</title>
							<sort_order>10</sort_order>
						</TotalMetrica_Importacao>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<importacao>
					<file>importacao.xml</file>
				</importacao>
			</updates>
		</layout>
    </adminhtml>   
    <global>
		<blocks>
			<importacao>
				<class>TotalMetrica_Importacao_Block</class>
			</importacao>
		</blocks>
		<helpers>
			<importacao>
				<class>TotalMetrica_Importacao_Helper</class>
			</importacao>
		</helpers>
    </global>
</config>